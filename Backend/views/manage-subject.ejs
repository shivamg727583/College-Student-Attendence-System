<!-- views/manage-data.ejs -->
<%- include('partials/header', { title: 'Manage Data', user: user }) %>

<div class="min-h-screen bg-gray-100 p-4 sm:p-6 lg:p-8">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Manage Subject</h1>

        <!-- Success Message -->
        <% if (successMessage) { %>
            <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline"><%= successMessage %></span>
            </div>
        <% } %>

        <!-- Error Messages -->
        <% if (errorMessages && errorMessages.length > 0) { %>
            <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <ul class="list-disc pl-5">
                    <% errorMessages.forEach(error => { %>
                        <li><%= error %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
       
        <!-- Subjects Section -->
        <div>
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-900">Subjects</h2>
                <a href="/api/subjects/create-subject" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Add Subject</a>
            </div>
            <div class="bg-white shadow overflow-x-auto sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject Name</th>
                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (subjects.length === 0) { %>
                            <tr>
                                <td colspan="3" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">No subjects found.</td>
                            </tr>
                        <% } else { %>
                            <% subjects.forEach((subject, index) => { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= index + 1 %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= subject.subject_name %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                        <a href="/api/subjects/update/<%= subject._id %>" class="text-indigo-600 hover:text-indigo-900 mr-4">Edit</a>
                                        <form action="/api/subjects/delete/<%= subject._id %>" method="POST" class="inline-block" onsubmit="return confirm('Are you sure you want to delete this subject?');">
                                            <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Tailwind CSS CDN (if not included in header) -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<%- include('partials/footer') %>
