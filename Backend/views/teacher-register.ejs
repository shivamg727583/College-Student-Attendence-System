<!-- views/register-teacher.ejs -->
<%- include('partials/header', { title: 'Teacher Registration', user: user }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Card Container -->
        <div class="bg-white p-8 border border-gray-200 rounded-lg shadow-lg">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Register as a Teacher
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Or
                    <a href="/api/teachers/login" class="font-medium text-blue-600 hover:text-blue-500">
                        login to your account
                    </a>
                </p>
            </div>


            <!-- Registration Form -->
            <form class="mt-8 space-y-6" action="/api/teachers/register-teacher" method="POST">
                <div class="rounded-md shadow-sm -space-y-px">
                    <!-- Name Field -->
                    <div>
                        <label for="name" class="sr-only">Name</label>
                        <input id="name" name="name" type="text" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="Full Name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>">
                    </div>

                    <!-- Email Field -->
                    <div>
                        <label for="email" class="sr-only">Email address</label>
                        <input id="email" name="email" type="email" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="Email address" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>">
                    </div>

                    <!-- Password Field -->
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" required
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="Password">
                    </div>
                </div>

                <!-- Subjects Selection -->
                <div>
                    <label for="subjects" class="block text-sm font-medium text-gray-700">Subjects</label>
                    <select id="subjects" name="subjects[]" multiple required
                        class="mt-1 block w-full pl-3 pr-10 py-2  text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                        <% subjects.forEach(subject => { %>
                            <option value="<%= subject._id %>" <%= (oldInput && oldInput.subjects && oldInput.subjects.includes(subject._id.toString())) ? 'selected' : '' %> class="border p-1 border-gray-400">
                                <%= subject.subject_name %> 
                            </option>
                        <% }) %>
                    </select>
                    <p class="mt-2 text-sm text-gray-500">Hold down the Ctrl (Windows) or Command (Mac) button to select multiple subjects.</p>
                </div>

                <!-- Classes Selection -->
                <div>
                    <label for="classes" class="block text-sm font-medium text-gray-700">Classes</label>
                    <select id="classes" name="classes[]" multiple required
                        class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                        <% classes.forEach(classItem => { %>
                            <option value="<%= classItem._id %>" <%= (oldInput && oldInput.classes && oldInput.classes.includes(classItem._id.toString())) ? 'selected' : '' %> class="border  border-gray-400 p-1">
                                <%= classItem.class_name %>-<%= classItem.section %>
                            </option>
                        <% }) %>
                    </select>
                    <p class="mt-2 text-sm text-gray-500">Hold down the Ctrl (Windows) or Command (Mac) button to select multiple classes.</p>
                </div>

               
                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('partials/footer') %>
