        <ul>
            <li class="mb-2">
                <a href="/admin/dashboard" class="block py-2 px-3 rounded hover:bg-blue-600">Home</a>
            </li>
            <li class="mb-2">
                <a href="/api/teachers/manage-teachers" class="block py-2 px-3 rounded hover:bg-blue-600">Manage Teachers</a>
            </li>
