<!-- views/update-teacher.ejs -->
<%- include('partials/header', { title: 'Update Teacher Profile', user: user }) %>

<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Card Container -->
        <div class="bg-white p-8 border border-gray-200 rounded-lg shadow-lg">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Update Your Profile
                </h2>
                <p class="mt-2 text-center text-sm text-gray-600">
                    Make changes to your account below.
                </p>
            </div>

            <!-- Success Message -->
            <% if (successMessage) { %>
                <div class="mt-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= successMessage %></span>
                </div>
            <% } %>

            <!-- Error Messages -->
            <% if (errorMessages && errorMessages.length > 0) { %>
                <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <ul class="list-disc pl-5">
                        <% errorMessages.forEach(error => { %>
                            <li><%= error %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <!-- Update Form -->
            <form class="mt-8 space-y-6" action="/api/teachers/update/<%= teacher._id  %>" method="POST">
                <input type="hidden" name="teacherId" value="<%= teacher._id %>">
                <div class="rounded-md shadow-sm -space-y-px">
                    <!-- Name Field -->
                    <div>
                        <label for="name" class="sr-only">Name</label>
                        <input id="name" name="name" type="text"
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="Full Name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : teacher.name %>">
                    </div>

                    <!-- Email Field -->
                    <div>
                        <label for="email" class="sr-only">Email address</label>
                        <input id="email" name="email" type="email"
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="Email address" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : teacher.email %>">
                    </div>

                    <!-- Password Field -->
                    <div class="relative">
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password"
                            class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm"
                            placeholder="New Password (leave blank to keep current password)">
                        <button type="button" id="toggle-password" onclick="togglePasswordVisibility()"
                            class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">
                            Show
                        </button>
                    </div>
                </div>

                <!-- Subjects Selection -->
                <div>
                    <label for="subjects" class="block text-sm font-medium text-gray-700">Subjects</label>
                    <select id="subjects" name="subjects[]" multiple
                        class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                        <% subjects.forEach(subject => { %>
                            <option value="<%= subject._id %>" <%= (oldInput && oldInput.subjects && oldInput.subjects.includes(subject._id.toString())) || (!oldInput && teacher.subjects.includes(subject._id.toString())) ? 'selected' : '' %> class='p-1 border border-zinc-400'>
                                <%= subject.subject_name %>
                            </option>
                        <% }) %>
                    </select>
                    <p class="mt-2 text-sm text-gray-500">Hold down the Ctrl (Windows) or Command (Mac) button to select multiple subjects.</p>
                </div>

                <!-- Classes Selection -->
                <div>
                    <label for="classes" class="block text-sm font-medium text-gray-700">Classes</label>
                    <select id="classes" name="classes[]" multiple
                        class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-md">
                        <% classes.forEach(classItem => { %>
                            <option value="<%= classItem._id %>" <%= (oldInput && oldInput.classes && oldInput.classes.includes(classItem._id.toString())) || (!oldInput && teacher.classes.includes(classItem._id.toString())) ? 'selected' : '' %> class='p-1 border border-zinc-400'>
                                <%= classItem.class_name %> -  <%= classItem.section %>
                            </option>
                        <% }) %>
                    </select>
                    <p class="mt-2 text-sm text-gray-500">Hold down the Ctrl (Windows) or Command (Mac) button to select multiple classes.</p>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Update Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Tailwind CSS CDN (if not included in header) -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<%- include('partials/footer') %>

<!-- Optional: JavaScript for Password Visibility Toggle -->
<script>
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('password');
        const toggleButton = document.getElementById('toggle-password');

        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleButton.innerHTML = 'Hide';
        } else {
            passwordInput.type = 'password';
            toggleButton.innerHTML = 'Show';
        }
    }
</script>
