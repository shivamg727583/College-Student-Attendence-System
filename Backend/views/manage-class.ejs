<!-- views/manage-data.ejs -->
<%- include('partials/header', { title: 'Manage Data', user: user }) %>

<div class="min-h-screen bg-gray-100 p-4 sm:p-6 lg:p-8">
    <a href="/api/admin/dashboard" class="p-3 py-1 bg-blue-600 rounded-lg text-white font-bold text-xl">‚Üê</a>
    <div class="max-w-7xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Manage Class</h1>

        <!-- Classes Section -->
        <div class="mb-8">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-900">Classes</h2>
                <a href="/api/class/create-class" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Add Class</a>
            </div>
            <div class="bg-white shadow overflow-x-auto sm:rounded-lg">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Class Name</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Section</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Semester</th>

                            <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (classes.length === 0) { %>
                            <tr>
                                <td colspan="4" class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">No classes found.</td>
                            </tr>
                        <% } else { %>
                            <% classes.forEach((classItem, index) => { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= index + 1 %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= classItem.class_name %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= classItem.section %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= classItem.semester %></td>

                                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                                        <a href="/api/class/update-class/<%= classItem._id %>" class="text-indigo-600 hover:text-indigo-900 mr-4">Edit</a>
                                        <a href="/api/class/delete/<%= classItem._id %>"  class="inline-block" onsubmit="return confirm('Are you sure you want to delete this class?');">
                                            <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                        </a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

       

      
    </div>
</div>

<!-- Tailwind CSS CDN (if not included in header) -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<%- include('partials/footer') %>
